<Window x:Class="M000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		SizeToContent="Height"
		Topmost="True"
		WindowStartupLocation="CenterScreen"
		FontSize="14"
		ResizeMode="NoResize">
	<Window.Background>
		<LinearGradientBrush>
			<GradientStop Color="LightGreen" Offset="0"/>
			<GradientStop Color="Orange" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<StackPanel Margin="5">
		<UniformGrid Columns="2">
			<TextBlock Text="Vorname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Nachname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Geburtsdatum: "/>
			<DatePicker Margin="0"/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Verheiratet: "/>
			<CheckBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Geschlecht: "/>
			<StackPanel>
				<RadioButton Content="M"/>
				<RadioButton Content="W"/>
				<RadioButton Content="D"/>
			</StackPanel>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="100, 5, 0, 0">
			<Button Content="OK" Margin="0, 0, 2.5, 0"/>
			<Button Content="Abbrechen" Margin="2.5, 0, 0, 0"/>
		</UniformGrid>
    </StackPanel>
</Window>
